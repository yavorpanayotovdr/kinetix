#!/usr/bin/env bash
set -euo pipefail

echo "==> Running UI lint..."
(cd ui && npm run lint)

echo "==> Running Gradle unit, integration, and acceptance tests..."
./gradlew test integrationTest acceptanceTest --quiet

echo "==> Running UI tests..."
(cd ui && npm run test)

echo "==> Running risk-engine tests..."
(cd risk-engine && uv run pytest -q)

echo "==> All checks passed."
