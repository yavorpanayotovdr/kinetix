root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{kt,kts}]
indent_size = 4

[*.{ts,tsx,js,jsx,json,css,html}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.proto]
indent_size = 2

[*.sql]
indent_size = 2

[Makefile]
indent_style = tab
