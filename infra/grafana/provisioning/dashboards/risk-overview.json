{
  "uid": "kinetix-risk-overview",
  "title": "Risk Overview",
  "tags": ["kinetix", "risk"],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Current VaR",
      "type": "gauge",
      "gridPos": { "h": 8, "w": 6, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "risk_var_value",
          "legendFormat": "{{portfolio_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500000 },
              { "color": "red", "value": 1000000 }
            ]
          },
          "unit": "currencyUSD"
        }
      }
    },
    {
      "id": 2,
      "title": "VaR Trend",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 6, "y": 0 },
      "targets": [
        {
          "expr": "risk_var_value",
          "legendFormat": "{{portfolio_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        }
      }
    },
    {
      "id": 3,
      "title": "Expected Shortfall",
      "type": "stat",
      "gridPos": { "h": 8, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "risk_var_expected_shortfall",
          "legendFormat": "{{portfolio_id}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        }
      }
    },
    {
      "id": 4,
      "title": "VaR Component Breakdown",
      "type": "barchart",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "risk_var_component_contribution",
          "legendFormat": "{{asset_class}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD"
        }
      }
    },
    {
      "id": 5,
      "title": "VaR Calculation Count",
      "type": "stat",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(rate(var_calculation_count_total[5m]))",
          "legendFormat": "Calculations/s",
          "refId": "A"
        }
      ]
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
