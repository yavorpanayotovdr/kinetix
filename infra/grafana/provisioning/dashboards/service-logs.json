{
  "uid": "kinetix-service-logs",
  "title": "Service Logs",
  "tags": ["kinetix", "logs"],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "label": "Service",
        "datasource": { "type": "loki", "uid": "loki" },
        "query": "label_values(service_name)",
        "includeAll": true,
        "allValue": ".+",
        "current": { "text": "All", "value": "$__all" },
        "multi": true,
        "refresh": 2,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "title": "Log Volume",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum by (service_name) (count_over_time({service_name=~\"$service\"} [$__auto]))",
          "legendFormat": "{{service_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "stacking": { "mode": "normal" },
            "fillOpacity": 80
          },
          "unit": "short"
        }
      },
      "options": {
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 2,
      "title": "Error Count",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 0 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({service_name=~\"$service\"} | detected_level=`ERROR` [$__range]))",
          "legendFormat": "Errors",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 10 },
              { "color": "red", "value": 100 }
            ]
          }
        }
      }
    },
    {
      "id": 3,
      "title": "Error Volume",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum by (service_name) (count_over_time({service_name=~\"$service\"} | detected_level=`ERROR` [$__auto]))",
          "legendFormat": "{{service_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "stacking": { "mode": "normal" },
            "fillOpacity": 80
          },
          "color": { "mode": "fixed", "fixedColor": "red" },
          "unit": "short"
        }
      },
      "options": {
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 4,
      "title": "Warn Count",
      "type": "stat",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 8 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "sum(count_over_time({service_name=~\"$service\"} | detected_level=`WARN` [$__range]))",
          "legendFormat": "Warnings",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 50 },
              { "color": "orange", "value": 200 }
            ]
          }
        }
      }
    },
    {
      "id": 5,
      "title": "Log Lines",
      "type": "logs",
      "gridPos": { "h": 16, "w": 24, "x": 0, "y": 16 },
      "datasource": { "type": "loki", "uid": "loki" },
      "targets": [
        {
          "expr": "{service_name=~\"$service\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
